<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.calculatorController">
   <children>
      <AnchorPane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: #333;">
         <children>
            <Label layoutX="30.0" layoutY="50.0" prefHeight="44.0" prefWidth="541.0" text="WELCOME TO THE POLYNOMIAL CALCULATOR!" textFill="WHITE">
               <font>
                  <Font name="Baloo Regular" size="26.0" />
               </font>
            </Label>
            <Label fx:id="nameLabel" alignment="CENTER" layoutX="89.0" layoutY="14.0" prefHeight="44.0" prefWidth="412.0" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Baloo Regular" size="28.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="81.0" layoutY="142.0" prefHeight="17.0" prefWidth="93.0" text="First Polynomial" />
      <Label layoutX="81.0" layoutY="178.0" prefHeight="17.0" prefWidth="111.0" text="Second Polynomial" />
      <TextField fx:id="firstPolTextField" layoutX="213.0" layoutY="137.0" prefHeight="27.0" prefWidth="306.0" promptText="First Polynomial" />
      <TextField fx:id="secondPolTextField" layoutX="213.0" layoutY="173.0" prefHeight="27.0" prefWidth="306.0" promptText="Second Polynomial" />
      <Label layoutX="81.0" layoutY="213.0" prefHeight="17.0" prefWidth="111.0" text="Result" />
      <Button fx:id="addButton" layoutX="32.0" layoutY="254.0" mnemonicParsing="false" onAction="#addButtonOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #333;" text="Add  ( + )" textFill="WHITE" />
      <Button fx:id="subtractButton" layoutX="171.0" layoutY="254.0" mnemonicParsing="false" onAction="#subtractButtonOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #333;" text="Subtract  ( - )" textFill="WHITE" />
      <Button fx:id="cancelButton" layoutX="229.0" layoutY="322.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #333;" text="Cancel" textFill="WHITE" />
      <Label fx:id="resultLabel" layoutX="213.0" layoutY="208.0" prefHeight="27.0" prefWidth="306.0">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <Button fx:id="derivativeButton" layoutX="310.0" layoutY="254.0" mnemonicParsing="false" onAction="#derivativeButtonOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #333;" text="Derivative" textFill="WHITE" />
      <Button fx:id="integrateButton" layoutX="449.0" layoutY="254.0" mnemonicParsing="false" onAction="#integrateButtonOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #333;" text="Integrate" textFill="WHITE" />
   </children>
</AnchorPane>
